
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.4.1/css/simple-line-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/Content/card.css" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/Employer.css" />

</head>
<body>
    @if (Session["FirstName"] != null)
    {

        <nav class="navbar navbar-expand-lg navbar-light bg-light ">
            <div class="container-fluid">
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon">  </span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav">
                        <a href="/Employer/Home" class="nav-item nav-link @ViewBag.activeD">Home</a>
                        @*<a href="Professionals" class="nav-item nav-link">Add Professionals</a>*@
                        <a href="/Employer/Hired" class="nav-item nav-link @ViewBag.activeMP">Hired</a>
                        <a href="/Employer/Account" class="nav-item nav-link @ViewBag.activeP">Account</a>
       
                        <!--    <a href="#" class="nav-item nav-link disabled" tabindex="-1">Reports</a>-->
                    </div>
                    <div class="navbar-nav ms-auto collapse navbar-collapse justify-content-end">
                        <div class="px-5 text-danger"><a href="/Employer/Account" class="text-capitalize text-info h5">@Session["FirstName"]</a></div>
                        <a href="Logout" class="text-white btn btn-warning">Logout</a>


                    </div>
                </div>
            </div>
        </nav>
    }
    <div>
        @RenderBody()
    </div>

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    <script src="assets/js/script.js"></script>
</body>
</html>

